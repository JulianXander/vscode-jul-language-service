{
	"name": "vscode-jul",
	"publisher": "Julian Xander",
	"version": "0.0.1",
	"displayName": "JUL",
	"description": "JUL language support",
	"categories": [
		"Programming Languages"
	],
	"icon": "icon.png",
	"repository": {
		"type": "git",
		"url": "https://github.com/JulianXander/vscode-jul-language-client"
	},
	"activationEvents": [
		"onLanguage:jul"
	],
	"engines": {
		"vscode": "^1.52.0"
	},
	"contributes": {
		"languages": [
			{
				"id": "jul",
				"extensions": [
					".jul"
				],
				"configuration": "./language-configuration.json"
			}
		],
		"grammars": [
			{
				"language": "jul",
				"scopeName": "source.jul",
				"path": "./syntaxes/jul.tmLanguage.json"
			}
		],
		"snippets": [
			{
				"language": "jul",
				"path": "./snippets.json"
			}
		],
		"configurationDefaults": {
			"[jul]": {
				"editor.detectIndentation": false,
				"editor.insertSpaces": false,
				"editor.tabSize": 2,
				"editor.wordSeparators": "`~!@#%^&*()-=+[{]}\\|;:'\",.<>/?ยง",
				"files.eol": "\n"
			},
			"yaml.schemas": {
				"C:\\Projects\\JUL\\jul-compiler\\src\\jul-config-schema.json": "*jul-config.yaml"
			}
		}
	},
	"main": "./out/extension",
	"scripts": {
		"build": "npx tsc",
		"convert-grammar": "npx js-yaml syntaxes/jul.tmLanguage.yaml > syntaxes/jul.tmLanguage.json",
		"test-deploy": "run-script-os",
		"test-deploy:nix": "copyfiles --follow ./** $HOME/.vscode/extensions/vscode-jul-language-service",
		"test-deploy:windows": "copyfiles --follow ./** %USERPROFILE%/.vscode/extensions/vscode-jul-language-service"
	},
	"dependencies": {
		"jul-lsp-server": "file:../jul-language-server",
		"vscode-languageclient": "^8.0.2"
	},
	"devDependencies": {
		"@types/node": "^18.13.0",
		"@types/vscode": "^1.75.0",
		"js-yaml": "^4.1.0",
		"run-script-os": "^1.1.6",
		"typescript": "^4.9.5"
	}
}

{
	"name": "vscode-jul",
	"publisher": "Julian Xander",
	"version": "0.0.1",
	"displayName": "JUL",
	"description": "JUL language support",
	"categories": [
		"Programming Languages"
	],
	"icon": "icon.png",
	"repository": {
		"type": "git",
		"url": "https://github.com/JulianXander/vscode-jul-language-client"
	},
	"engines": {
		"vscode": "^1.83.0"
	},
	"contributes": {
		"languages": [
			{
				"id": "jul",
				"extensions": [
					".jul"
				],
				"configuration": "./language-configuration.json"
			}
		],
		"grammars": [
			{
				"language": "jul",
				"scopeName": "source.jul",
				"path": "./syntaxes/jul.tmLanguage.json",
				"embeddedLanguages": {
					"meta.embedded.block.html": "html",
					"meta.embedded.block.javascript": "javascript"
				}
			}
		],
		"snippets": [
			{
				"language": "jul",
				"path": "./snippets.json"
			}
		],
		"configurationDefaults": {
			"[jul]": {
				"editor.detectIndentation": false,
				"editor.insertSpaces": false,
				"editor.tabSize": 2,
				"editor.wordSeparators": "`~!@#%^&*()-=+[{]}\\|;:'\",.<>/?ยง",
				"files.eol": "\n"
			}
		},
		"yamlValidation": [
			{
				"fileMatch": "*jul-config.yaml",
				"url": "./node_modules/jul-lsp-server/node_modules/jul-compiler/src/jul-config-schema.json"
			}
		]
	},
	"extensionDependencies": [
		"redhat.vscode-yaml"
	],
	"main": "./out/extension",
	"scripts": {
		"test-build": "npx tsc",
		"build": "esbuild ./src/extension.ts --bundle --outfile=out/extension.js --external:vscode --format=cjs --platform=node",
		"package": "vsce package --yarn",
		"install": "code --install-extension vscode-jul-0.0.1.vsix",
		"convert-grammar": "npx js-yaml syntaxes/jul.tmLanguage.yaml > syntaxes/jul.tmLanguage.json",
		"test-deploy": "run-script-os",
		"test-deploy:nix": "copyfiles --follow ./** $HOME/.vscode/extensions/vscode-jul-language-service",
		"test-deploy:windows": "copyfiles --follow ./** %USERPROFILE%/.vscode/extensions/vscode-jul-language-service"
	},
	"dependencies": {
		"jul-lsp-server": "file:../jul-language-server",
		"vscode-languageclient": "^9.0.1"
	},
	"devDependencies": {
		"@types/node": "^18.18.5",
		"@types/vscode": "^1.83.0",
		"esbuild": "^0.20.0",
		"js-yaml": "^4.1.0",
		"run-script-os": "^1.1.6",
		"typescript": "^5.2.2"
	}
}
